# Enable rewrite engine
RewriteEngine On

# Handle recruitment-app routes
<IfModule mod_rewrite.c>
    RewriteCond %{REQUEST_URI} ^/recruitment-app/
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^recruitment-app/(.*)$ /recruitment-app/index.html [L]
</IfModule>

# Handle rom routes
<IfModule mod_rewrite.c>
    RewriteCond %{REQUEST_URI} ^/rom/
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^rom/(.*)$ /rom/index.html [L]
</IfModule> 